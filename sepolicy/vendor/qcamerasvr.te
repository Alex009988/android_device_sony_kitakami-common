# qcamerasvr service
type qcamerasvr, domain;
type qcamerasvr_exec, exec_type, file_type;

# Started by init
init_daemon_domain(qcamerasvr)

allow qcamerasvr camera_data_file:dir { add_name remove_name search write w_dir_perms };
allow qcamerasvr camera_data_file:sock_file { create unlink };
allow qcamerasvr camera_prop:file { getattr open read r_file_perms };
allow qcamerasvr camera_socket:sock_file unlink;
allow qcamerasvr cameraserver:fd use;
allow qcamerasvr hal_camera_default:fd use;
allow qcamerasvr hal_graphics_allocator_default:fd use;
allow qcamerasvr ion_device:chr_file { open r_file_perms read ioctl };
allow qcamerasvr mediaserver:fd use;
allow qcamerasvr sysfs:file { open read rw_file_perms write };
allow qcamerasvr sysfs_graphics:file { open read r_file_perms };
allow qcamerasvr ta_data_file:dir search;
allow qcamerasvr vendor_camera_data_file:dir { add_name remove_name write };
allow qcamerasvr vendor_camera_data_file:sock_file { create unlink };
allow qcamerasvr video_device:chr_file { rw_file_perms ioctl open read write };
allow qcamerasvr camera_socket:dir { add_name remove_name search write };
allow qcamerasvr camera_socket:sock_file create;

