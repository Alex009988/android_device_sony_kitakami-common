allow vendor_init device:file { create write };
allow vendor_init firmware_file:dir { open read };
allow vendor_init firmware_file:dir read;
allow vendor_init proc:file write;
allow vendor_init proc_dirty:file write;
allow vendor_init proc_dirty_ratio:file write;
allow vendor_init tmpfs:dir { add_name write };
allow vendor_init tmpfs:lnk_file create;
allow vendor_init trim_area_partition_device:blk_file setattr;
allow vendor_init wifi_data_file:dir getattr;
allow vendor_init wpa_socket:dir getattr;
allow vendor_init wifi_data_file:dir search;
allow vendor_init firmware_file:dir search;

allow vendor_init {
  camera_data_file
  media_rw_data_file
  nfc_data_file
  system_data_file
  tombstone_data_file
  wifi_data_file
  wpa_socket
}:dir { create search getattr open read setattr ioctl write add_name remove_name rmdir relabelfrom };

# Allow vendor init to set camera_prop
set_prop(vendor_init, camera_prop)
